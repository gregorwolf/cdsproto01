{
  "name": "cdsproto01",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "express": "^4",
    "@sap/xssec": "^3",
    "passport": "^0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds watch"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "drafts": {
      "cancellationTimeout": 1
    },
    "requires": {
      "auth": {
        "kind": "basic-auth",
        "users": {
          "alice": {
            "password": "PW",
            "roles": [
              "modeler",
              "admin"
            ]
          },
          "bob": {
            "password": "PW",
            "ID": "employee@test.com",
            "roles": [
              "modeler"
            ],
            "userAttributes": {
              "environments": [
                {
                  "SXP0012": {
                    "teams": [
                      "MYTEAM"
                    ],
                    "fields": [
                      {
                        "COUNTRY": [
                          "DE",
                          "US"
                        ]
                      }
                    ]
                  }
                }
              ]
            }
          },
          "*": false
        }
      },
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "sqlite.db"
        }
      },
      "approuter": {
        "kind": "cloudfoundry"
      }
    }
  }
}